# AWS Configuration
aws_region = "us-east-1"

# Application Configuration
app_name      = "counter"
container_image = "YOUR_ECR_REPOSITORY_URI:latest"  # e.g., "123456789012.dkr.ecr.us-east-1.amazonaws.com/counter:latest"

# VPC Configuration
use_default_vpc = true
# vpc_id = ""  # Uncomment and set if not using default VPC

# ECS Task Configuration
task_cpu    = 256
task_memory = 512
desired_count = 1

# Redis Configuration
redis_node_type         = "cache.t3.micro"
redis_num_cache_clusters = 1

# Logging Configuration
log_retention_days      = 7
enable_container_insights = false


